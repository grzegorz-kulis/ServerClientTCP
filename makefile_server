CC=gcc

OBJ_DIR=bin
SRC_DIR=src
DEP_DIR=include

MKDIR_P=@mkdir -p $(@D)

SRCS=$(SRC_DIR)/server.c
OBJS=$(OBJ_DIR)/server.o $(OBJ_DIR)/thread.o
DEPS=$(DEP_DIR)/thread.h

TARGET=server

$(OBJ_DIR)/$(TARGET): $(OBJS)
	$(MKDIR_P)
	$(CC) -pthread -o $@ $^

$(OBJ_DIR)/%.o: $(SRC_DIR)/%.c $(DEPS)
	$(MKDIR_P)
	$(CC) -pthread -c $< -o $@ 

.PHONY: clean

clean:
	rm -f $(OBJ_DIR)/$(TARGET)
	rm -f $(OBJS)
