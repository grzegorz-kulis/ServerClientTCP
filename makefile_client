CC=gcc

OBJ_DIR=bin
SRC_DIR=src
DEP_DIR=include

MKDIR_P=@mkdir -p $(@D)

SRCS=$(SRC_DIR)/lisek-client.c $(SRC_DIR)/client_help.c
OBJS=$(OBJ_DIR)/lisek-client.o $(OBJ_DIR)/client_help.o

TARGET=client

$(OBJ_DIR)/$(TARGET): $(OBJS)
	$(MKDIR_P)
	$(CC) -o $@ $^

$(OBJ_DIR)/%.o: $(SRC_DIR)/%.c
	$(MKDIR_P)
	$(CC) -c $< -o $@

.PHONY: clean

clean:
	rm -f $(OBJ_DIR)/$(TARGET)
	rm -f $(OBJS)
